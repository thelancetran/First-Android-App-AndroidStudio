<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/genwp"
    >

    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:text="Genshin Impact Guide"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="45dp" />

    <Button
        android:id="@+id/charButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Characters"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/homeText"
        />

    <Button
        android:id="@+id/weapButton"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="Weapons"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/charButton"
        />

</RelativeLayout>