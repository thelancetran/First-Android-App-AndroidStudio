<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        tools:context=".keqing">

        <TextView
            android:id="@+id/keqingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Keqing"
            android:textSize="38sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        //Keqing card
        <ImageView
            android:id="@+id/keqingCard"
            android:layout_width="255dp"
            android:layout_height="450dp"
            android:layout_below="@id/keqingName"
            android:src="@drawable/keqingcard" />

        //talent books
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_below="@id/keqingName"
            android:columnCount="1"
            android:rowCount="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:src="@drawable/talentprosp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3/6/9"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/talentprospp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="21/42/63"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/talentprosppp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="38/76/114"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </GridLayout>

        //boss material + local specialty
        <GridLayout
            android:id="@+id/keqingmats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/keqingCard"
            android:columnCount="3"
            android:rowCount="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="135dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ring" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="135dp"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/corlapis" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="135dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/lightningprism" />

            </LinearLayout>


        </GridLayout>

        <TextView
            android:id="@+id/keqingArtifact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keqingmats"
            android:layout_marginLeft="8dp"
            android:text="Artifacts:"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        //first artifact rec
        <GridLayout
            android:id="@+id/keqingArtifact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keqingArtifact"
            android:layout_gravity="center_horizontal"
            android:columnCount="3"
            android:rowCount="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/tf" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/gladiator" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/shimenawa" />
            </LinearLayout>

        </GridLayout>

        //second artifact rec
        <GridLayout
            android:id="@+id/keqingArtifact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/keqingArtifact1"
            android:layout_gravity="center_horizontal"
            android:columnCount="3"
            android:rowCount="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/paleflame" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=" "
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/paleflame" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/bloodstain" />
            </LinearLayout>

        </GridLayout>

        //main stats artifacts
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/keqingArtifact2"
            android:columnCount="3"
            android:rowCount="2" >

            //sands
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/sands" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atk %"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"/>
            </LinearLayout>
            //goblet
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="42dp"
                    android:src="@drawable/goblet" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electro/Physical"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>
            //circlet
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/circlet" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crit %"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            //extra lower space
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ">
            </TextView>

        </GridLayout>

    </RelativeLayout>

</ScrollView>