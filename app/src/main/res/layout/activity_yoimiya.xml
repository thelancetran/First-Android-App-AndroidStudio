<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        tools:context=".yoimiya">

        <TextView
            android:id="@+id/yoimiyaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Naganohara Yoimiya"
            android:textSize="38sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        //Yoimiya card
        <ImageView
            android:id="@+id/yoimiyaCard"
            android:layout_width="255dp"
            android:layout_height="450dp"
            android:layout_below="@id/yoimiyaName"
            android:src="@drawable/yoimiyacard" />

        //talent books
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_below="@id/yoimiyaName"
            android:columnCount="1"
            android:rowCount="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:src="@drawable/talenttran" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3/6/9"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/talenttrann" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="21/42/63"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/talenttrannn" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="38/76/114"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </GridLayout>

        //boss material + local specialty
        <GridLayout
            android:id="@+id/yoimiyamats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/yoimiyaCard"
            android:columnCount="3"
            android:rowCount="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="135dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/crown" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="135dp"
                    android:layout_marginLeft="35dp"
                    android:src="@drawable/nakuweed" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="135dp"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/smolderingpearl" />
            </LinearLayout>


        </GridLayout>

        <TextView
            android:id="@+id/yoimiyaArtifact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yoimiyamats"
            android:layout_marginLeft="8dp"
            android:text="Artifacts:"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        //first artifact rec
        <GridLayout
            android:id="@+id/yoimiyaArtifact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yoimiyaArtifact"
            android:layout_gravity="center_horizontal"
            android:columnCount="3"
            android:rowCount="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/cw" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/gladiator" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/shimenawa" />
            </LinearLayout>

        </GridLayout>

        //second artifact rec
        <LinearLayout
            android:id="@+id/yoimiyaArtifact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yoimiyaArtifact1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/cw" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/yoimiyaArtifact2"
            android:layout_below="@+id/yoimiyaArtifact1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="15dp"
                android:text="or 4"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/shimenawa" />
        </LinearLayout>

        //main stats artifacts
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/yoimiyaArtifact2"
            android:columnCount="3"
            android:rowCount="2" >

            //sands
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/sands" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atk %"
                    android:textColor="@color/white"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="6dp"/>
            </LinearLayout>
            //goblet
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="36dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/goblet" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pyro"
                    android:textColor="@color/white"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="17dp"/>
            </LinearLayout>
            //circlet
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="40dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/circlet" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crit %"
                    android:textColor="@color/white"
                    android:textSize="38sp"
                    android:textStyle="bold" />
            </LinearLayout>
            //extra lower space
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ">
            </TextView>

        </GridLayout>

    </RelativeLayout>

</ScrollView>